<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/game_list_dest">

    <fragment
            android:id="@+id/game_list_dest"
            android:name="remi.scoreboard.fragment.GameListFragment"
            android:label="Games"
            tools:layout="@layout/fragment_game_list">
        <action
            android:id="@+id/next_action"
            app:destination="@id/player_list_dest"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
            android:id="@+id/player_list_dest"
            android:name="remi.scoreboard.fragment.UserListFragment"
            android:label="Players"
            tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/next_action"
            app:destination="@id/gameplay_dest" />
    </fragment>
    <fragment
        android:id="@+id/gameplay_dest"
        android:name="remi.scoreboard.fragment.GamePlayFragment"
        android:label="Game Play" />
    <fragment
        android:id="@+id/stats_dest"
        android:name="remi.scoreboard.fragment.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/settings_dest"
        android:name="remi.scoreboard.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>