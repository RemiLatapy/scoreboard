<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/player_nav_graph"
    app:startDestination="@id/player_list_dest">

    <fragment
        android:id="@+id/player_list_dest"
        android:name="remi.scoreboard.fragment.ChoosePlayerFragment"
        android:label="Players">
        <action
            android:id="@+id/nextAction"
            app:destination="@id/playActivity" />
        <argument
            android:name="gameId"
            app:argType="string" />
        <action
            android:id="@+id/action_manage_players"
            app:destination="@+id/manage_player_activity" />
    </fragment>
    <activity
        android:id="@+id/playActivity"
        android:name="remi.scoreboard.activity.PlayActivity"
        android:label="PlayActivity" />
    <activity
        android:id="@+id/manage_player_activity"
        android:name="remi.scoreboard.activity.ManagePlayerActivity"
        android:label="Manage players" >
        <argument
            android:name="userId"
            app:argType="string" />
    </activity>
</navigation>