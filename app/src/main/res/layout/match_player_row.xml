<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="rank"
            type="String" />

        <variable
            name="name"
            type="String" />

        <variable
            name="score"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/player_row_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rank_txt"
            android:layout_width="@dimen/rank_text_size"
            android:layout_height="wrap_content"
            android:text="@{rank}"
            app:layout_constraintBaseline_toBaselineOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1st" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fragment_padding"
            android:text="@{name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rank_txt"
            tools:text="RÃ©mi" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{Integer.toString(score) + " points"}'
            app:layout_constraintBaseline_toBaselineOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="127 points" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>