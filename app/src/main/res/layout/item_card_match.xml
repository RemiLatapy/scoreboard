<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="match"
            type="remi.scoreboard.data.Match" />

        <import type="java.util.List" />

        <import type="android.view.View" />

        <import type="remi.scoreboard.data.PlayerScore" />

        <variable
            name="playerList"
            type="List&lt;PlayerScore&gt;" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{clickListener}"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="4dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/text_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:contentDescription="@string/game_name"
                android:text="@{match.game.name}"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                card_view:text="Phase 10" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/match_date"
                android:text="@{match.date.toString()}"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/text_game_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_game_name"
                card_view:text="16/04/2019" />

            <TextView
                android:id="@+id/text_player_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/number_of_players"
                android:text='@{Integer.toString(playerList.size()) + " players"}'
                app:layout_constraintStart_toStartOf="@+id/text_game_name"
                app:layout_constraintTop_toBottomOf="@+id/text_game_name"
                card_view:text="5 players" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="@{playerList.size() >= 1 ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/text_date"
                app:layout_constraintStart_toStartOf="@+id/text_player_num"
                app:layout_constraintTop_toBottomOf="@+id/text_player_num">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st"
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_first"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/name_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text='@{playerList.size() >= 1 ? playerList.get(0).player.name : ""}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView9"
                    card_view:text="RÃ©mi" />

                <TextView
                    android:id="@+id/points_first"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{playerList.size() >= 1 ? Integer.toString(playerList.get(0).score) + " points" : ""}'
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_first"
                    app:layout_constraintEnd_toEndOf="parent"
                    card_view:text="127 points" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="@{playerList.size() >= 2 ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintEnd_toEndOf="@+id/text_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_player_num"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd"
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_second"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/name_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text='@{playerList.size() >= 2 ? playerList.get(1).player.name : ""}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView10"
                    card_view:text="Bastien" />

                <TextView
                    android:id="@+id/points_second"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{playerList.size() >= 2 ? Integer.toString(playerList.get(1).score) + " points" : ""}'
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_second"
                    app:layout_constraintEnd_toEndOf="parent"
                    card_view:text="10 points" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="@{playerList.size() >= 3 ? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/text_date"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/text_player_num"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd"
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_third"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/name_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text='@{playerList.size() >= 3 ? playerList.get(2).player.name : ""}'
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView8"
                    card_view:text="Audrey" />


                <TextView
                    android:id="@+id/points_third"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{playerList.size() >= 3 ? Integer.toString(playerList.get(2).score) + " points" : ""}'
                    app:layout_constraintBaseline_toBaselineOf="@+id/name_third"
                    app:layout_constraintEnd_toEndOf="parent"
                    card_view:text="3 points" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</layout>