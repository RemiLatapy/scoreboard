<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/game_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:sriv_left_bottom_corner_radius="2dp"
                app:sriv_left_top_corner_radius="2dp"
                app:sriv_right_bottom_corner_radius="2dp"
                app:sriv_right_top_corner_radius="2dp" />

            <TextView
                android:id="@+id/game_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="16dp"
                android:background="@drawable/transparent_title_mask"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_info_black_48dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_play_arrow_black_48dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>