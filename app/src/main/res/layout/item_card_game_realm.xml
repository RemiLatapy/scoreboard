<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="game"
            type="remi.scoreboard.realmdata.GameRealm" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/game_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:imageFromUrl="@{game.thumbnail}"
                    app:sriv_left_bottom_corner_radius="2dp"
                    app:sriv_left_top_corner_radius="2dp"
                    app:sriv_right_bottom_corner_radius="2dp"
                    app:sriv_right_top_corner_radius="2dp" />

                <TextView
                    android:id="@+id/game_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/transparent_title_mask"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/big_padding"
                    android:text="@{game.name}"
                    android:textColor="@color/white"
                    android:textSize="40sp" />

            </FrameLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>